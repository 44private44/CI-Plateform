            <form class="login_form" method="post">
                <div class="text-center">
                    <a href="#" class="lost_password_a forgot_passsword_a">New Password</a>
                </div>
                <div class="text-center mt-2 color_text">
                    <span>Please enter a new password in the fields below. </span>
                </div>
                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div class="form-group">
                    <label for="exampleInputEmail1" class="mb-1 mt-4" id="resetpasswordlabel">New Password *</label>
                    <input asp-for="Password" type="password" class="form-control" id="resetpassword" aria-describedby="emailHelp" name="Password"
                           placeholder="Enter your new password.">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <label for="" class="mb-1 mt-1 d-none validatefield" id="resetpasswordalert"> Password must be atleast 8 characters !</label>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="mb-1 mt-4" id="resetconpasswordlabel">Confirm New Password *</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="resetconpassword" aria-describedby="emailHelp" name="ConfirmPassword"
                           placeholder="Re-enter Password ">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <label for="" class="mb-1 mt-1 d-none validatefield" id="resetcomparepasswordalert"> Both password must be same  !</label>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn login_button col-12" id="resetpasswordsubmit">Change Password</button>
                </div>
                <div class="text-center mt-4">
                    <a asp-area="" asp-controller="UserAuth" asp-action="Login" class="lost_password_a">Login</a>
                </div>
