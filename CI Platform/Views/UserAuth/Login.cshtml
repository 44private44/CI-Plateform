@{
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>
        @TempData["success"]
    </div>
}
@if (TempData["error2"] != null)
{
    <div class="alert alert-danger">
        <strong>Error !</strong>
        @TempData["error2"]
    </div>
}
@if (TempData["success3"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>
        @TempData["success3"]
    </div>
}
<div class="container-fluid login">
    <div class="row  ci_login_div">
        <!-- carousel image  partial _userauthcarousel-->
        <div class="col-lg-8 col-md-12 col-sm-12 padding_set_main_row">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators change_position_slider_icon">
                    <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="3"
                            aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="../IMAGES/CI Platform Assets/@Model.banners.FirstOrDefault().Image"
                             class="
                                d-block w-100" alt="first_image1">
                        <div class="carousel-caption d-none d-md-block text_left_slider">
                            <h2>@Model.banners.FirstOrDefault().Text</h2>
                            <p>
                                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Accusantium sit atque natus
                                odit cum incidunt rerum itaque libero nesciunt corrupti ipsam, maxime numquam ipsa,
                                saepe, nam blanditiis sunt aperiam maiores?
                                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Accusantium sit atque natus
                                odit cum incidunt rerum itaque libero nesciunt corrupti ipsam, maxime numquam ipsa,
                                saepe, nam blanditiis sunt aperiam maiores?
                            </p>
                        </div>
                    </div>
                    @foreach (var imagedata in Model.banners.Skip(1))
                    {
                        <div class="carousel-item">

                            <img src="../IMAGES/CI Platform Assets/@imagedata.Image"
                             class="
                                d-block w-100" alt="first_image2">
                            <div class="carousel-caption d-none d-md-block text_left_slider">
                                <h2> @imagedata.Text</h2>
                                <p>
                                    Lorem ipsum dolor, sit amet consectetur adipisicing elit. Accusantium sit atque natus
                                    odit cum incidunt rerum itaque libero nesciunt corrupti ipsam, maxime numquam ipsa,
                                    saepe, nam blanditiis sunt aperiam maiores?
                                    Lorem ipsum dolor, sit amet consectetur adipisicing elit. Accusantium sit atque natus
                                    odit cum incidunt rerum itaque libero nesciunt corrupti ipsam, maxime numquam ipsa,
                                    saepe, nam blanditiis sunt aperiam maiores?
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Authentication form -->
        <div class="col-lg-3 col-md-8 col-sm-9 col-10 ms-lg-5 mt-md-5 mt-sm-5 mt-4 form_div_md_responsive">
            <form class="login_form" method="post">
                <!-- E-mail -->
                <div class="form-group">
                    <label asp-for="email" class="mb-1" id="loginemailmainlabel">Email Address *</label>
                    <input asp-for="email" type="email" class="form-control"
                           placeholder="enter email" id="loginemailmain">
                    <label for="" class="mb-1 mt-1 validatefield d-none" id="userAdminValidateEmail9"> Email not registered !</label>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <!-- Password -->
                <div class="form-group mt-4">
                    <label asp-for="password" class="mb-lg-1" id="loginpasswordmainlabels">Password *</label>
                    <input asp-for="password" type="password" class="form-control" placeholder="Password" id="loginpasswordmain">
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <!-- Login button -->
                <div class="mt-4">
                    <button type="submit" class="btn login_button col-12">Login</button>
                </div>
                <!-- Lost your Password -->
                <div class="text-center mt-4">
                    <a asp-area="" asp-controller="UserAuth" asp-action="Forgot" class="lost_password_a color_text">Lost your Password ?</a>
                </div>
                <!-- Create an Account -->
                <div class="text-center mt-2 color_text ">
                    <span>Don't have an account ? </span>
                    <a asp-area="" asp-controller="UserAuth" asp-action="Registration" class="lost_password_a">Create an account</a>
                </div>
                <!-- Privacy Policy -->
                <div class="text-center color_text lost_password_a privacy_policy_div mt-lg-5 mt-md-3 mt-sm-2 mt-2">
                    <a asp-controller="UserRecords" asp-action="UserPrivacy" class="lost_password_a privacy_policy_a">Privacy Policy</a>
                </div>

                 <!-- SP for mission -->
                 @* <div class="text-center color_text lost_password_a privacy_policy_div mt-lg-5 mt-md-3 mt-sm-2 mt-2">
                    <a asp-controller="Mission" asp-action="MissionData" class="lost_password_a privacy_policy_a">Mission Data</a>
                </div>
                  <div class="text-center color_text lost_password_a privacy_policy_div mt-lg-5 mt-md-3 mt-sm-2 mt-2">
                    <a asp-controller="Mission" asp-action="SPMissionInsert" class="lost_password_a privacy_policy_a">Mission Insert</a>
                </div>*@
            </form>
        </div>
    </div>
</div>
